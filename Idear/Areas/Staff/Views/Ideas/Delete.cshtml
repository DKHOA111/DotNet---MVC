@model Idea

@{
	ViewData["Title"] = "Delete Idea";
}

<h1>Delete Idea</h1>

<h3>Are you sure?</h3>
<form method="post" class="mt-3">
	<div class="form-group row">
		<label asp-for="Id" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Id" disabled class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="Text" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Text" disabled class="form-control">
			<span asp-validation-for="Text" class="text-danger"></span>
		</div>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row">
		<div class="col-10">
			<button type="submit" value="Delete" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
			<a asp-action="ListIdeaByUser" class="btn btn-light"><i class="bi bi-arrow-return-left"></i> Back to list</a>
		</div>

	</div>
</form>