@model Idear.Areas.Staff.ViewModels.TopicIdeasVM

@{
    ViewData["Title"] = "Details";
}


<form method="post" class="mt-3">
    <h1> Topic: @Model.Name</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Ideas</th>
                <th>View</th>
                <th>Likes</th>
                <th>Dislikes</th>
                <th>Comments</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Ideas.Any())
            {
                foreach (var idea in Model.Ideas)
                {
                    <tr>
                        <td>@idea.Text</td>
                        <td> @idea.Views!.Sum(v => v.VisitTime)</td>
                        <td>@idea.Reacts.Where(i => i.ReactFlag == 1).Count()</td>
                        <td>@idea.Reacts.Where(i => i.ReactFlag == -1).Count()</td>
                        <td>@idea.Comments.Count</td>
                        <td>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@idea.Id">Details</a>
                            <a class="btn btn-primary">Like</a>
                            <a class="btn btn-primary">Dislike</a>
                        </td>
                    </tr>

                }
            }
            else
            {
                <h5 class="card-title">None of ideas</h5>
            }
        </tbody>
    </table>
    <td>
        <a asp-area="Staff" asp-controller="Topics" asp-action="Index" class="btn btn-outline-dark" >Back To List</a>
    </td>

</form>