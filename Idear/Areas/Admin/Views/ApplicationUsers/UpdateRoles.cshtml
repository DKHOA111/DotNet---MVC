@model Idear.ViewModels.ApplicationUsersVM

@{
    ViewData["Title"] = "Update Roles";
}

<h1>Update Roles</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateRoles">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.AppUser.Id" />
            <div class="form-group">
                <label asp-for="@Model.AppUser.Email" class="control-label"></label>
                <input asp-for="@Model.AppUser.Email" class="form-control" />
                <span asp-validation-for="@Model.AppUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @for (int i = 0; i < Model.roles.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.roles[i].Value" />
                    <input asp-for="@Model.roles[i].Selected" />

                    @Model.roles[i].Text

                }
            </div>
            <div class="form-group row">
                <div class="col-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}