@model Idear.Areas.Admin.ViewModels.ApplicationUsersVM

@{
    ViewData["Title"] = "Update Roles";
}

<h1>Update Roles</h1>

<form method="post" class="mt-3">
    <input asp-for="AppUser.Id" hidden />
    <div class="form-group row">
        <label asp-for="AppUser.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="AppUser.Email" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Roles assigned</label>
        <div class="col-10">
            <div class="form-control">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.Roles[i].Value" />
                    <input asp-for="@Model.Roles[i].Selected" />
                    <label asp-for="@Model.Roles[i].Selected">@Model.Roles[i].Text</label>
                }
            </div>
        </div>
    </div>
    <br />

    <div class="form-group row">
        <div class="col-10">
            <button type="submit" class="btn btn-dark">Update</button>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}