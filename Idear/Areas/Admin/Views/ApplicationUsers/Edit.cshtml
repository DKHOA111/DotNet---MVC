@model Idear.Areas.Admin.ViewModels.EditUserVM

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="FullName" class="form-control">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DepartmentId" class="col-sm-2 col-form-label"></label>
        <div class="col-10">
            <select asp-for="DepartmentId" asp-items="@Model.Departments" class="form-select" aria-required="true">
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group gapbreak">
        <label asp-for="BannedDate" class="control-label text-bold"> Ban until: </label>
        <input asp-for="BannedDate" class="form-control" />
        <span asp-validation-for="BannedDate" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-10">
            <button type="submit" class="btn btn-dark"><i class="bi bi-card-checklist"></i> Update</button>
            <a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-return-left"></i> Back to list</a>
        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
