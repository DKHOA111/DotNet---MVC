@model Idear.Areas.Admin.ViewModels.EditUserVM

@{
	ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>
<h3>Are you sure? If you delete this user, all related data to this user will be delete too</h3>
<form method="post" class="mt-3">
	<div class="form-group row">
		<label asp-for="Id" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Id" disabled class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="Email" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Email" disabled class="form-control">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="FullName" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="FullName" disabled class="form-control">
			<span asp-validation-for="FullName" class="text-danger"></span>
		</div>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row">
		<div class="col-10">
			<button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
			<a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-return-left"></i> Back to list</a>
		</div>

	</div>
</form>
