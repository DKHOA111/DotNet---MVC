@model Idear.Areas.Admin.ViewModels.RolesVM

@{
	ViewData["Title"] = "Edit Roles";
}

<h1>Edit Roles</h1>

<form method="post" class="mt-3">
	<div class="form-group row">
		<label asp-for="Id" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Id" disabled class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="RoleName" class="form-control">
			<span asp-validation-for="RoleName" class="text-danger"></span>
		</div>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row">
		<div class="col-10">
			<button type="submit" class="btn btn-dark"><i class="bi bi-card-checklist"></i> Update</button>
			<a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-return-left"></i> Back to list</a>
		</div>

	</div>
</form>