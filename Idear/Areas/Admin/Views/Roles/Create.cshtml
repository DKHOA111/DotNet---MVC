@using Microsoft.AspNetCore.Identity
@model IdentityRole
<h4>Roles</h4>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<h2>Create Role</h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="from-floating ">
				<label asp-for="Name"></label>
				<input asp-for="Name" class=" form-control" aria-required="true" />
				
