@using Microsoft.AspNetCore.Identity
@model IdentityRole
<h4>Roles</h4>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<h2>Create Role</h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="from-floating ">
				<label asp-for="Name"></label>
				<input asp-for="Name" class=" form-control" aria-required="true" />
				<span asp-validation-for="Name" class=" text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<div class="col-10">
					<button type="submit" class="btn btn-dark"><i class="bi bi-plus-circle"></i> New role</button>
					<a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-return-left"></i> Back to list</a>
				</div>
			</div>
		</form>
	</div>
</div>