@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

@{
	ViewData["Title"] = "Application Roles";
}

<h1> View Roles</h1>

<p>
	<a class="btn btn-dark" asp-action="Create"><i class="bi bi-clipboard-plus"></i> Create New</a>
</p>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>
					<a asp-action="Edit" asp-controller="Roles" class="btn btn-primary" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Edit</a>
					<a asp-action="Delete" asp-controller="Roles" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>