@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

@{
	ViewData["Title"] = "Application Roles";
}

<h1> View Roles</h1>

<p>
	<a asp-action="Create"> Create</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>
					<a asp-action="Edit" asp-controller="Roles" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> 
					<form method="post" asp-action="Delete" asp-controller="Roles" asp-route-id="@item.Id">
					<button class="btn btn-danger" type="submit" onclick="return (confirm('Are you sure?'))">Delete</button>
			</form>
				</td>
			</tr>

		}
	</tbody>
</table>
