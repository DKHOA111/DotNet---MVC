@model IEnumerable<Idear.Models.Department>

@{
    ViewData["Title"] = "Department";
}

<h1>View Departments</h1>

<p>
    <a class="btn btn-dark" asp-action="Create"><i class="bi bi-clipboard-plus"></i> Create New</a>
</p>
<table class="table table-hover table-striped bg-white">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
