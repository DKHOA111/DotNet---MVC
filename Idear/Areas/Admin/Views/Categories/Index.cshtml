@model Idear.Areas.Admin.ViewModels.CategoriesVM

@{
    ViewData["Title"] = "Category";
}

<h1>View Categories</h1>

<!-- Button trigger modal -->
<p>
    <a class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createBackdrop"><i class="bi bi-clipboard-plus"></i> Create New</a>
</p>

<!-- Modal -->
<div class="modal fade" id="createBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createBackdropLabel">Create/Edit category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" id="form-create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Category.Name" class="control-label text-bold"></label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group text-right">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="btn-create" type="submit" class="btn btn-primary" form="form-create">Submit</button>
            </div>
        </div>
    </div>
</div>

<table class="table table-hover table-bordered bg-white table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="list-container">
    @foreach (var item in Model.Categories) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Edit</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
    }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#btn-create").click(function (e) {
                e.preventDefault();

                // check if form is valid
                if ($("#form-create").valid()) {
                    $.ajax({
                        url: '/Admin/Categories/Create',
                        type: "POST",
                        data: $('#form-create').serialize(),
                        success: function (result) {
                            updateCategoryUI(result);
                            $('#createBackdrop').modal('hide');
                        }
                    });
                }
            });
        });

        function updateCategoryUI(result) {
            $('#list-container').prepend(
                `
                <tr>
                    <td>${result.name}</td>
                    <td>
                        <a href="/Admin/Categories/Edit/${result.id}" class="btn btn-primary""><i class="bi bi-pencil"></i> Edit</a>
                        <a href="/Admin/Categories/Delete/${result.id}" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
                `
            );
        }
    </script>
}