@model Idear.Models.Topic

@{
    ViewData["Title"] = "Create Topic";
}

<h1>Create</h1>
<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosureDate" class="control-label"></label>
                <input asp-for="ClosureDate" class="form-control" />
                <span asp-validation-for="ClosureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalClosureDate" class="control-label"></label>
                <input asp-for="FinalClosureDate" class="form-control" />
                <span asp-validation-for="FinalClosureDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="col-10">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-plus-circle"></i> New Topic</button>
                    <a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-return-left"></i> Back to list</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
