@model Idear.Models.Topic

@{
    ViewData["Title"] = "Create Topic";
}

<div class="card mx-3 mt-n5 shadow-lg form-view">
    <div class="card-body">
        <h3 class="text-center">Create Topic</h3>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group gapbreak">
                <label asp-for="Name" class="control-label text-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group gapbreak">
                <label asp-for="ClosureDate" class="control-label text-bold"></label>
                <input asp-for="ClosureDate" class="form-control" />
                <span asp-validation-for="ClosureDate" class="text-danger"></span>
            </div>
            <div class="form-group gapbreak">
                <label asp-for="FinalClosureDate" class="control-label text-bold"></label>
                <input asp-for="FinalClosureDate" class="form-control" />
                <span asp-validation-for="FinalClosureDate" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-dark"><i class="bi bi-plus-circle"></i> New Topic</button>
                <a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-return-left"></i> Back to list</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
