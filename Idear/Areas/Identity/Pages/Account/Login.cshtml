@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card mx-3 mt-n5 shadow-lg form-view">
                <div class="card-body">
                    <section>
                        <form id="account" method="post">
                            <h2>Welcome</h2>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <input id="email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input id="pass" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div>
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                            </div>
                            <div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mx-3 mt-n5 shadow-lg home-section">
                <div class="card-header bg-primary bg-opacity-50 header-section">
                    <h4><i class="bi bi-person-square"></i> Account</h4>
                </div>
                <div class="card-body">
                    <div class="card-body d-flex justify-content-between">
                        <p>Admin</p>
                        <button type="button" class="btn btn-outline-info" onclick="Admin()">Copy</button>
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        <p>QA Manager</p>
                        <button type="button" class="btn btn-outline-info" onclick="QAManager()">Copy</button>
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        <p>Staff</p>
                        <button type="button" class="btn btn-outline-info" onclick="Staff()">Copy</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function Admin(){
            var emailInput = document.getElementById('email');
            var passInput = document.getElementById('pass');
            emailInput.value ="Khoa234@gmail.com"
            passInput.value = "Khoa234@gmail.com"
        }
        function QAManager(){
            var emailInput = document.getElementById('email');
